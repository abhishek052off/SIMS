@using SIMSWeb.Model.ViewModels;

@{
    ViewData["title"] = "View Assignments";
}

@model List<AssignmentViewModel>;

<div class="row col-12">
    <div class="card mb-3">
        <div class="card-header h5 fw-bold d-flex justify-content-between">
            Assignment Details
            @if (!User.IsInRole("Student"))
            {
                <a class="btn btn-outline-primary" asp-controller="Assignment"
                   asp-action="AddAssignment" asp-route-courseId="@ViewBag.CourseId">
                   Add Assignment
               </a>
            }
        </div>
        <div class="card-body">
            @if (Model == null && Model.Count > 0)
            {
                <div class="text-center align-content-center" style="height:100px">
                    <h6 class="text-muted">No assignments added for this course.</h6>
                    @if (!User.IsInRole("Student"))
                    {
                        <a class="btn btn-outline-primary" asp-controller="Assignment"
                            asp-action="AddAssignment" asp-route-courseId="@ViewBag.CourseId">
                            Add Assignment
                        </a>
                    }
                </div>

            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Due Date</th>
                            <th>Maximum Score</th>
                            @if (!User.IsInRole("Student"))
                            {
                                <th>Submission</th>
                                <th></th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                       
                        @foreach (var assignment in Model)
                        {
                            <tr>
                                <td class="col-sm-2">@assignment.Title</td>
                                <td>@assignment.Description</td>
                                <td class="col-sm-2">
                                    @(assignment.DueDate.ToString("dd MMM, yyyy") ?? "No date available")
                                </td>
                                <td class="col-sm-2">
                                    @assignment.MaxScore
                                </td>
                                @if (!User.IsInRole("Student"))
                                {
                                    <td class="col-sm-2">
                                        <a asp-action="ViewSubmissions" asp-controller="Submission" 
                                        asp-route-assignmentId="@assignment.Id" 
                                        asp-route-courseId="@ViewBag.CourseId" title="View Submission details" 
                                        class="btn btn-sm btn-outline-primary">
                                            View Submission
                                        </a>
                                    </td>
                                    <td class="col-sm-1">
                                        <span>
                                            <a asp-action="EditAssignment" asp-controller="Assignment" asp-route-id="@assignment.Id" 
                                            asp-route-courseId="@ViewBag.CourseId" class="btn btn-sm rounded-5 btn-primary" 
                                            title="Edit Assignment">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        </span>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
                </div>
            }
        </div>
        <div class="card-footer">
            <a asp-controller="Course" asp-action="ViewCourse" class="btn btn-primary"
                   asp-route-id="@ViewBag.CourseId">
                   Back
            </a>
        </div>
    </div>
</div>
